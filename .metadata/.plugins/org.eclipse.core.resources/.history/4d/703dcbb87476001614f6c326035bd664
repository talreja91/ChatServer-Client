package com.intbit;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;
import java.util.List;

public class QuizDAO {
   @SuppressWarnings("unchecked")
public List<Quiz> getAllQuizs(){
      List<Quiz> QuizList = null;
      try {
         File file = new File("Quizs.dat");
         if (!file.exists()) {
            Quiz Quiz = new Quiz("my name is?", "Mahesh", "Akash", "Saurabh", "pandit", "C");
            QuizList = new ArrayList<Quiz>();
            QuizList.add(Quiz);
            saveQuizList(QuizList);		
         }
         else{
            FileInputStream fis = new FileInputStream(file);
            ObjectInputStream ois = new ObjectInputStream(fis);
            QuizList = (List<Quiz>) ois.readObject();
            ois.close();
         }
      } catch (IOException e) {
         e.printStackTrace();
      } catch (ClassNotFoundException e) {
         e.printStackTrace();
      }		
      return QuizList;
   }

   private void saveQuizList(List<Quiz> QuizList){
      try {
         File file = new File("Quizs.dat");
         FileOutputStream fos;

         fos = new FileOutputStream(file);

         ObjectOutputStream oos = new ObjectOutputStream(fos);
         oos.writeObject(QuizList);
         oos.close();
      } catch (FileNotFoundException e) {
         e.printStackTrace();
      } catch (IOException e) {
         e.printStackTrace();
      }
   }   